<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/show_jamat_time_bg"
    tools:context=".Insert_Jamat_Time">


    <LinearLayout
        android:id="@+id/country_container"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_marginTop="45dp"
        android:background="#009688"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_container_new">

        <Spinner
            android:id="@+id/sp_district"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:hint="Select District"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/country_container_new"
        android:layout_width="344dp"
        android:layout_height="38dp"

        android:layout_marginTop="240dp"
        android:background="#009688"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Spinner
            android:id="@+id/sp_country"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upazil_container"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_marginTop="45dp"
        android:background="#009688"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_container">

        <Spinner
            android:id="@+id/sp_upazila"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:hint="Select Upazila"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Mosque_name_container"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:background="#009688"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upazil_container">

        <EditText
            android:id="@+id/et_mosque"
            android:layout_width="344dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Mosque Name"
            android:inputType="text"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="174dp"
        android:layout_height="56dp"
        android:layout_marginBottom="68dp"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.528" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_marginTop="160dp"
        android:text="Add New Mosjid"
        android:textColor="#FFC107"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

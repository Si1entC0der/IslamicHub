<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/show_jamat_time_bg"
    tools:context=".UpdateJamatTime">


    <LinearLayout
        android:id="@+id/country_container"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:layout_marginTop="250dp"

        android:background="#009688"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/country_name"

            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/distric_container"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:background="#009688"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_container"
        tools:ignore="DuplicateIds">


        <Spinner
            android:id="@+id/District_Name"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:hint="Select District"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/upazil_container"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:background="#009688"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distric_container">

        <Spinner
            android:id="@+id/Upazila_Name"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:hint="Select Upazila"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="344dp"
        android:layout_height="38dp"
        android:background="#009688"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upazil_container">

        <Spinner
            android:id="@+id/Mosque_Name"
            android:layout_width="344dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:backgroundTint="#009688"
            android:hint="Select Mosque"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <Button
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="237dp"
        android:layout_height="61dp"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:text="Search Mosjid For \n Update Jamat Time"
        android:textColor="#FFC107"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>